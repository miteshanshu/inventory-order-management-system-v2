# keep the full connection string for MongoDB cluster access
MongoDb__ConnectionString=mongodb+srv://<username>:<password>@<cluster-host>/?retryWrites=true&w=majority

# choose the database we read and write
MongoDb__DatabaseName=inventory

# secret key that signs JWT tokens, must stay 32 chars
JwtSettings__Secret=replace-with-32-char-secret

# issuer name so tokens show who sent them
JwtSettings__Issuer=InventoryApp

# audience name so tokens know the allowed clients
JwtSettings__Audience=InventoryAppUsers

# token lifetime in minutes before refresh needed
JwtSettings__ExpiryMinutes=60
